<?xml version="1.0" encoding="UTF-8"?>

<monitor>

	<rules group_name="VMware-VCloud">

		<!-- ************************************************************************ -->
		<!--                        APPLICATIVE VMWARE RULES                          -->
		<!-- ************************************************************************ -->
		
		<!--  If percentage of function is greater or equal to [value] across current session, generate event. -->
		<rule name="Function global percentage" param_display="VMware login" param="User login" stickers="performance" ref="JZR-APP-VMW-VCLOUD-001">
			<narrative>This rule detects any VCloud login slowness.</narrative>
			<thresholds>
				<threshold type="system value" 
						   count="1"
				           value="25" 
				           level="WARNING"
				           sub_level="10"
				           message="VMware VCloud Director login is slow.&#10; This affects the performance of the application&#10; You may check with a DBA the database access perfomance."/>
			</thresholds>
		</rule>
		
		<!--  If contention type regex [pattern] is seen in more than [value] parallel threads, generate event. -->
		<rule name="Contention type parallel contention" extra_info="PostgreSQL contention" ref="JZR-APP-VMW-VCLOUD-002">
			<thresholds>
				<threshold type="session custom"
						   count="1"
						   value="10"
				           pattern="PostgreSQL" 
				           level="INFO"
				           sub_level="10"
				           message="Important activity on the PostgreSQL. Check the various database calls and possibly discuss with the DBA to look for performance bottlenecks."/>
			</thresholds>
		</rule>
		
	</rules>

</monitor>