<?xml version="1.0" encoding="UTF-8"?>

<monitor>

	<rules group_name="Zipkin">

		<!-- ************************************************************************ -->
		<!--                       ZIPKIN RULES                                     -->
		<!-- ************************************************************************ -->

		<!--  If shared profile is detected across current session, generate event. -->
		<rule name="Shared profile" param_display="Zipkin tracer agent" param="Zipkin" stickers="performance, environment" ref="JZR-SHA-ZIPKIN-001">
			<narrative>This rule detects the Zipkin tracer agent usage.</narrative>
			<thresholds>
				<threshold type="system signal" 
				           level="INFO"
				           sub_level="8"
				           message="Zipkin tracer agent is used.&#10; Make sure it is configured properly to not impact the application performance."/>
			</thresholds>
		</rule>		

	</rules>

</monitor>
