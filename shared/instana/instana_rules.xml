<?xml version="1.0" encoding="UTF-8"?>

<monitor>

	<rules group_name="Instana">

		<!-- ************************************************************************ -->
		<!--                       INSTANA RULES                                         -->
		<!-- ************************************************************************ -->

		<!--  If operation is detected across current session, generate event. -->
		<rule name="Operation presence" param_display="Instana agent" param="Instana thread dump generation" stickers="performance, environment" ref="JZR-SHA-INSTA-001">
			<narrative>This rule detects the usage of the Instana monitoring agent.</narrative>
			<thresholds>
				<threshold type="system signal" 
				           level="INFO"
				           sub_level="8"
				           message="Instana monitoring agent is used.&#10; Make sure it is configured properly to not impact the application performance."/>
			</thresholds>
		</rule>

	</rules>

</monitor>
