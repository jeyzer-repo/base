<?xml version="1.0" encoding="UTF-8"?>

<monitor>

	<rules group_name="Glowroot">

		<!-- ************************************************************************ -->
		<!--                       GLOWROOT RULES                                     -->
		<!-- ************************************************************************ -->

		<!--  If shared profile is detected across current session, generate event. -->
		<rule name="Shared profile" param_display="Glowroot agent" param="Glowroot" stickers="performance, environment" ref="JZR-SHA-GLOWROOT-001">
			<narrative>This rule detects the Glowroot agent usage.</narrative>
			<thresholds>
				<threshold type="system signal" 
				           level="INFO" 
				           sub_level="8"
				           message="Glowroot monitoring agent is used.&#10; Make sure it is configured properly to not impact the application performance."/>
			</thresholds>
		</rule>		

	</rules>

</monitor>
